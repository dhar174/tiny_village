{
  "name": "tiny-village-py312",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
  "features": {
    "ghcr.io/devcontainers-extra/features/coverage-py:2": {},
    "ghcr.io/devcontainers-extra/features/pylint:2": {},
    "ghcr.io/devcontainers-extra/features/black:2": {},
    "ghcr.io/hspaans/devcontainer-features/pytest:2": {},
    "ghcr.io/devcontainers/features/python:1": {"version": "3.12.1", "optimize":"true"}
  },
  "postCreateCommand": [
    "apk update && apk add --no-cache build-base",
    "pip install --no-cache-dir --upgrade pip pytest==7.4.0 black==23.9.1"
    
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true
      }
    }
  },
  "remoteUser": "root"
}

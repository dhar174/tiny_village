{
  "name": "tiny-village-py312",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
  "features": {
    "ghcr.io/devcontainers-extra/features/coverage-py:2": {},
    "ghcr.io/devcontainers-extra/features/pylint:2": {},
    "ghcr.io/devcontainers-extra/features/black:2": {},
    "ghcr.io/hspaans/devcontainer-features/pytest:2": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": [
    "sudo apt-get update && sudo apt-get install -y build-essential",
    "npm install --silent node-pty@1.1.0",
    "npm config set production false",
    "npm install --silent --save-dev typescript @types/node @types/mocha @types/jest"

  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": false
      }
    }
  }
}

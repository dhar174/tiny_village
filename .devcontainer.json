{
  "name": "tiny-village-py312",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
  "features": {
    "ghcr.io/devcontainers-extra/features/coverage-py:2": {},
    "ghcr.io/devcontainers-extra/features/pylint:2": {},
    "ghcr.io/devcontainers-extra/features/black:2": {},
    "ghcr.io/hspaans/devcontainer-features/pytest:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "containerEnv": {
    "DEVCONTAINERS_FORCE_NODE_PTY": "1.1.0"
  },
  "postCreateCommand": [
    "sudo apt-get update && sudo apt-get install -y build-essential"
  ],
  
  "forwardPorts": [5000, 8000],

  "customizations": {
    "codespaces": {
		    "disableAutomaticConfiguration": false
	    },
    "vscode": {
      "extensions": [
        "ms-python.python",
        "GitHub.vscode-pull-request-github",
        "ms-vscode-remote.remote-containers",
        "GitHub.codespaces",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": false,
        "github.copilot.editor.enableCodeActions": true,
        "chat.commandCenter.enabled": true,
        "workbench.commandPalette.experimental.askChatLocation": "default",
        "search.searchView.semanticSearchBehavior": "manual",
        "workbench.settings.showAISearchToggle": true,
        "github.copilot.enable": true,
        "github.copilot.nextEditSuggestions.enabled": true,
        "editor.inlineSuggest.edits.allowCodeShifting": true,
        "github.copilot.chat.followUps": true,
        "github.copilot.chat.localeOverride": "",
        "github.copilot.chat.runCommand.enabled": true,
        "github.copilot.chat.scopeSelection": true,
        "github.copilot.chat.terminalChatLocation": "view",
        "chat.detectParticipant.enabled": true,
        "chat.editor.fontFamily": "",
        "chat.editor.fontSize": 0,
        "chat.editor.fontWeight": "",
        "chat.editor.lineHeight": 0,
        "chat.editing.confirmEditRequestRemoval": true,
        "chat.editing.confirmEditRequestRetry": true,
        "chat.editing.autoAcceptDelay": 0,
        "chat.agent.enabled": true,
        "github.copilot.chat.agent.autoFix": true,
        "github.copilot.chat.agent.runTasks": true,
        "chat.mcp.enabled": true,
        "github.copilot.chat.codesearch.enabled": true,
        "chat.implicitContext.enabled": true,
        "github.copilot.chat.agent.thinkingTool": true,
        "github.copilot.chat.newWorkspaceCreation.enabled": true,
        "github.copilot.chat.edits.temporalContext.enabled": true,
        "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": true,
        "chat.tools.autoApprove": true,
        "chat.sendElementsToChat.enabled": true,
        "inlineChat.lineNaturalLanguageHint": false,
        "github.copilot.chat.editor.temporalContext.enabled": false,
        "github.copilot.chat.reviewSelection.enabled": false,
        "chat.promptFiles": false,
        "chat.promptFilesLocations": {},
        "chat.instructionsFilesLocations": {},
        "chat.modeFilesLocations": {},
        "accessibility.verbosity.inlineChat": "normal",
        "accessibility.verbosity.inlineCompletions": "normal",
        "accessibility.verbosity.panelChat": "normal",
        "accessibility.voice.keywordActivation": false,



      }
    }
  }
}
